{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/src/args/*.c",
                "${workspaceFolder}/src/game/ncurses/*.c",
                "${workspaceFolder}/src/init/*.c",
                "${workspaceFolder}/src/tetriminos/*.c",
                "${workspaceFolder}/src/debug/*.c",
                "-I",
                "${workspaceFolder}/include",
                "-L",
                "${workspaceFolder}/lib/",
                "-l",
                "my",
                "-lncurses",
                "-o",
                "${workspaceFolder}/vscode_debug.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Remove debug binary",
            "command": "/usr/bin/bash",
            "args": [
                "rm",
                "-f",
                "${workspaceFolder}/vscode_debug.out"
            ]
        }
    ],
    "version": "2.0.0"
}
